{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "release": "lerna publish",
    "release:next": "lerna publish prerelease",
    "test": "jest --watch",
    "test:ci": "jest --coverage --verbose",
    "build": "ttsc --build",
    "build:watch": "ttsc --build --watch",
    "lint": "eslint ./packages/**/*.{ts,tsx}"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-jest": "^22.17.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.3.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "ttypescript": "^1.5.7",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "packages/**/*.{js,json}": [
      "prettier --write",
      "git add"
    ],
    "docs/**/*.md": [
      "prettier --write",
      "git add"
    ]
  }
}
